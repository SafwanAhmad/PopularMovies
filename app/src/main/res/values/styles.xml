<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
    </style>

    <!--Theme for the setting activity older version. We have to provide two other versions
    of style one for v-14 and the other for v-21. Because Theme.AppCompat.Light.DarkActionBar
    is the support library for the ActionBar. But the setting activity does not extends
    ActionBarActivity.-->
    <style name="SettingTheme" parent="AppTheme"></style>

    <!--Special style for the favorite button-->
    <style name="style_favorite_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTop">@drawable/ic_favorite_white_24dp</item>
        <item name="android:background">@drawable/favorite_button</item>
        <item name="android:text">@string/mark_favorite</item>
        <item name="android:textColor">@color/color_movie_title_text</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>
