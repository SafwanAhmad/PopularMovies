<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.popularmovies.MovieDetailFragment">

    <!--Title of the movie-->
    <TextView
        android:id="@+id/movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_movie_title_text"
        android:paddingLeft="@dimen/title_text_padding_left"
        android:textSize="@dimen/title_text_size"
        android:background="@color/color_movie_title_background"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Scroll view can contain only single child-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scroll_view_direct_child_layout_margin"
            android:orientation="vertical">

            <!--Layout containing poster thumbnail, year of release, running
            time, ratings, mark as favorite button-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/outer_container_padding_top"
                android:paddingLeft="@dimen/outer_container_padding_left"
                android:orientation="horizontal">

                <!--Poster thumbnail-->
                <ImageView
                    android:id="@+id/movie_poster"
                    android:layout_width="@dimen/image_poster_layout_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/image_poster_layout_weight"/>

                <LinearLayout
                    android:layout_width="@dimen/inner_container_layout_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/inner_container_layout_weight"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/inner_container_layout_margin_left">

                    <!--Year of release-->
                    <TextView
                        android:id="@+id/release_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_movie_release_year"
                        android:textSize="@dimen/year_of_release_text_size"
                        android:fontFamily="sans-serif-condensed"/>

                    <!--Running time-->
                    <TextView
                        android:id="@+id/running_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_movie_release_year"
                        android:textSize="@dimen/running_time_text_size"
                        android:fontFamily="sans-serif-condensed"/>

                    <!--Movie Rating-->
                    <TextView
                        android:id="@+id/vote_average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_movie_rating"
                        android:textSize="@dimen/movie_rating_text_size"/>

                    <!--Mark as favorite button-->
                    <!--TODO make the button funcitonal-->
                    <Button
                        android:id="@+id/mark_favorite"
                        style="@style/style_favorite_button"/>


                </LinearLayout>

            </LinearLayout>

            <!--Movie Description-->
            <TextView
                android:id="@+id/movie_plot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/movie_description_text_size"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>