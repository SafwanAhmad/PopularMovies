<?xml version="1.0" encoding="utf-8"?>

<!--This is drawable file used to set style and effects to favorite button-->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/color_ripple">

    <!--This is the style in the default state of button -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke android:width="1dip" android:color="@color/color_stroke" />
            <gradient android:angle="90" android:startColor="@color/gradient_start" android:endColor="@color/gradient_end" />
        </shape>
    </item>


</ripple>